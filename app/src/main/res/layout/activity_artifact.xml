<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.walter.artifactlogger.Artifact">

    <EditText
        android:id="@+id/artifact_number_text"
        android:layout_width="168dp"
        android:layout_height="44dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Artifact Number..."
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/camera_preview"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.727" />

    <ImageView
        android:id="@+id/camera_preview"
        android:layout_width="177dp"
        android:layout_height="169dp"
        app:srcCompat="@android:drawable/ic_menu_camera"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/depth_text"
        android:layout_marginLeft="8dp" />

    <EditText
        android:id="@+id/location_text"
        android:layout_width="168dp"
        android:layout_height="44dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Location..."
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/camera_preview"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/artifact_number_text"
        app:layout_constraintHorizontal_bias="0.545" />

    <EditText
        android:id="@+id/depth_text"
        android:layout_width="166dp"
        android:layout_height="41dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Depth..."
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/location_text" />

    <EditText
        android:id="@+id/pre_hist_text"
        android:layout_width="168dp"
        android:layout_height="46dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Pre/Hist..."
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/camera_preview"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/depth_text"
        app:layout_constraintHorizontal_bias="0.545" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="360dp"
        android:layout_height="300dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Description..."
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <ImageButton
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@android:drawable/ic_menu_save" />

    <ImageButton
        android:id="@+id/add_picture_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-307dp"
        android:layout_marginRight="-271dp"
        app:layout_constraintBottom_toBottomOf="@+id/camera_preview"
        app:layout_constraintRight_toRightOf="@+id/camera_preview"
        app:srcCompat="@android:drawable/ic_input_add" />

    <ImageButton
        android:id="@+id/location_button"
        android:layout_width="25dp"
        android:layout_height="27dp"
        app:srcCompat="@android:drawable/ic_menu_compass"
        app:layout_constraintRight_toLeftOf="@+id/camera_preview"
        android:layout_marginRight="13dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toTopOf="@+id/depth_text" />
</android.support.constraint.ConstraintLayout>
